---
import Image from 'astro/components/Image.astro';
interface Props {
  icon: ImageMetadata;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<article class="grid grid-rows-subgrid gap-0 row-span-3 bg-btg-8 max-w-85.5 p-7.5 pe-6">
  <Image src={icon} alt={title} class="w-11" />
  <h3 class="text-2xl/7 text-btg-15 mt-6 mb-7">{title}</h3>
  <p class="text-xl/5.5 font-extralight">
    {description}
  </p>
</article>
